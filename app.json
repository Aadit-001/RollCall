{
  "expo": {
    "name": "RollCall",
    "slug": "rollcall",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/rc3.jpeg",
    "scheme": "rollcall",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "package": "com.pixelvolt.RollCall",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/rc3.jpeg",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.NEARBY_WIFI_DEVICES"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pixelvolt.RollCall"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/rc3.jpeg"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/rc3.jpeg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "@evennit/notifee-expo-plugin",
        {
          "androidAppExtension": true,
          "iosDeploymentTarget": "13.4",
          "apsEnvMode": "production",
          "backgroundModes": [
            "remote-notification"
          ]
        }
      ],
      [
        "react-native-ble-manager",
        {
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to connect to bluetooth devices",
          "bluetoothPeripheralPermission": "Allow $(PRODUCT_NAME) to use bluetooth"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "34afcc94-f155-4a26-a998-af677288ef47",
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                }
              ]
            },
            "android": {
              "appExtensions": [
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                }
              ]
            }
          }
        }
      }
    },
    "owner": "aklancer-001"
  }
}