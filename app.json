{
  "expo": {
    "name": "RollCall",
    "slug": "rollcall",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rollcall",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "package": "com.pixelvolt.RollCall",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_STATE",
        "android.permission.NEARBY_WIFI_DEVICES",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.CAMERA"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pixelvolt.RollCall"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "@evennit/notifee-expo-plugin",
        {
          "androidAppExtension": true,
          "iosDeploymentTarget": "13.4",
          "apsEnvMode": "production",
          "backgroundModes": [
            "remote-notification"
          ]
        }
      ],
      [
        "react-native-ble-manager",
        {
          "modes": [
            "peripheral",
            "central"
          ],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to connect to bluetooth devices",
          "bluetoothPeripheralPermission": "Allow $(PRODUCT_NAME) to use bluetooth"
        }
      ],
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                },
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                },
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                }
              ]
            },
            "android": {
              "appExtensions": [
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                },
                {
                  "targetName": "NotifeeNotificationServiceExtension",
                  "bundleIdentifier": "com.pixelvolt.RollCall.NotifeeNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.pixelvolt.RollCall.notifee"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "e67f1e9f-1740-4018-8cc5-57a63912c8cf"
      }
    },
    "owner": "pixelvolt"
  }
}
